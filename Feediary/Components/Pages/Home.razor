@page "/"
@layout MobileLayout
@inject IStringLocalizer<SharedResources> Localizer

<PageTitle>Feediary - Baby Feed Diary</PageTitle>

<div class="page-header">
    <h1 class="page-title">@Localizer["WelcomeTitle"]</h1>
    <p class="page-subtitle">@Localizer["WelcomeSubtitle"]</p>
</div>

<div class="greeting-card">
    <h2 class="welcome-text">@Localizer["Hello", GetGreeting()]</h2>
    <p class="subtitle-text">@Localizer["ReadyToTrack"]</p>
</div>

<div class="feature-card">
    <h3 class="feature-title">@Localizer["TrackFeedingsTitle"]</h3>
    <p class="feature-description">@Localizer["TrackFeedingsDescription"]</p>
</div>

<div class="feature-card">
    <h3 class="feature-title">@Localizer["ViewProgressTitle"]</h3>
    <p class="feature-description">@Localizer["ViewProgressDescription"]</p>
</div>

<div class="feature-card">
    <h3 class="feature-title">@Localizer["SmartRemindersTitle"]</h3>
    <p class="feature-description">@Localizer["SmartRemindersDescription"]</p>
</div>
