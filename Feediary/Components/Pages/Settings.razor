@page "/settings"
@layout MobileLayout
@inject IStringLocalizer<SharedResources> Localizer

<PageTitle>@Localizer["SettingsTitle"] - Feediary</PageTitle>

<div class="page-header">
    <h1 class="page-title">@Localizer["SettingsTitle"]</h1>
    <p class="page-subtitle">@Localizer["SettingsSubtitle"]</p>
</div>

<div class="greeting-card">
    <h2 class="welcome-text">@Localizer["AppSettingsTitle"]</h2>
    <p class="subtitle-text">@Localizer["AppSettingsSubtitle"]</p>
</div>

<div class="feature-card">
    <h3 class="feature-title">@Localizer["BabyProfileTitle"]</h3>
    <p class="feature-description">
        <strong>@Localizer["Name"]</strong> @BabyName<br/>
        <strong>@Localizer["BirthDate"]</strong> @BabyBirthDate<br/>
        <strong>@Localizer["Age"]</strong> @GetBabyAge()
    </p>
</div>

<div class="feature-card">
    <h3 class="feature-title">@Localizer["NotificationsTitle"]</h3>
    <p class="feature-description">
        @Localizer["FeedingReminders"] @(NotificationsEnabled ? Localizer["Enabled"] : Localizer["Disabled"])<br/>
        @Localizer["ReminderInterval"] @ReminderInterval @Localizer["Hours"]<br/>
        @Localizer["QuietHours"] @QuietHoursStart - @QuietHoursEnd
    </p>
</div>

<div class="feature-card">
    <h3 class="feature-title">@Localizer["AppPreferencesTitle"]</h3>
    <p class="feature-description">
        @Localizer["Theme"] @Localizer["DarkMode"]<br/>
        @Localizer["Units"] @Localizer["ImperialOz"]<br/>
        @Localizer["Language"] @GetCurrentLanguageName()
    </p>
</div>

<div class="feature-card">
    <h3 class="feature-title">@Localizer["DataBackupTitle"]</h3>
    <p class="feature-description">
        @Localizer["AutoBackup"] @(AutoBackupEnabled ? Localizer["Enabled"] : Localizer["Disabled"])<br/>
        @Localizer["LastBackup"] @GetLocalizedLastBackup()<br/>
        @Localizer["DataRetention"] @DataRetentionDays @Localizer["Days"]
    </p>
</div>